<head>
  <link rel="stylesheet" href="app/assets/stylesheet/edit.scss">
</head>
<body>
  <h1>Editing Book</h1>
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <% if @book.errors.any? %>
      <h3 class="error-message"> <%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
  <p>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
  </p>

</body>
