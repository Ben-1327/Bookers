<head>
  <link rel="stylesheet" href="app/assets/stylesheet/index.scss">
</head>
<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clospan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><%= book.title %></th>
          <th><%= book.body %></th>
          <th><%= link_to "Show", book_path(book.id) %></th>
          <th><%= link_to "Edit", edit_book_path(book.id) %></th>
          <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Do you really want to delete this?" %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2> <strong>New Book</strong> </h2>
  <%= form_for(@book,url:'/books') do |f| %>
    <% if @book.errors.any? %>
      <h3 class="error-message">2 errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</body>
