<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clospan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><%= book.title %></th>
          <th><%= book.body %></th>
          <th><%= link_to "Show", books_path(book.id) %></th>
          <th><%= link_to "Edit", edit_book_path(book.id) %></th>
          <th><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "delete-confirm" => "Do you really want to delete this?" %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2> <strong>New Book</strong> </h2>
  <%= form_for(@book,url:'/books') do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
  <% end %>
</body>
