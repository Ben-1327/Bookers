<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clospan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <span>
          <tr>
            <th><% @book.title %></th>
            <th><% @book.body %></th>
            <th></th>
          </tr>
        </span>
    </tbody>
  </table>
  <h2> <strong>New Book</strong> </h2>
  <%= form_for(@book, url: '/books') do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
  <% end %>
</body>
